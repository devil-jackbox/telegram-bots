# Example environment configuration

# MongoDB connection string
MONGODB_URI=mongodb://127.0.0.1:27017/bot_platform

# Optional database name override
# MONGODB_DB=bot_platform

# Long random secret for JWT (generate: openssl rand -base64 48)
JWT_SECRET=change-me-to-a-long-random-secret

NODE_ENV=development
PORT=3000
# Server Configuration
PORT=3001
NODE_ENV=production

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGIN=*

# Bot Configuration
MAX_BOTS_PER_USER=10
MAX_LOGS_PER_BOT=1000
MAX_ERRORS_PER_BOT=100
LOG_RETENTION_DAYS=30

# Auto-restart settings
AUTO_RESTART_ON_ERROR=true